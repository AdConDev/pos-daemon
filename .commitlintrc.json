{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "deps",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "encoding",
        "connector",
        "printer",
        "imaging",
        "profiles",
        "protocol",
        "escpos",
        "errors",
        "logs",
        "config",
        "api",
        "models",
        "service",
        "utils",
        "github",
        "deps"
      ]
    ],
    "subject-case": [
      2,
      "always",
      "lower-case"
    ],
    "subject-full-stop": [
      2,
      "never",
      "."
    ],
    "header-max-length": [
      2,
      "always",
      72
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "footer-leading-blank": [
      2,
      "always"
    ]
  }
}